<Window x:Class="Mvvm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mvvm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="t1" Text="{Binding Input1, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="274,96,0,0"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="t2" Text="{Binding Input2, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="274,141,0,0"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="t3"  Text="{Binding Result}" HorizontalAlignment="Left" Height="23" Margin="274,188,0,0"  VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Addbutton" Command="{Binding AddCommand}" Content="Button" HorizontalAlignment="Left" Margin="274,257,0,0" VerticalAlignment="Top" Width="119"/>

    </Grid>
</Window>
