<Page x:Class="KibaFramework.PageCheckBox"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KibaFramework"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageCheckBox">

    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock TextAlignment="Left"   Text="CheckBox应用" Margin="20,20,0,0" Height="70" FontSize="36"></TextBlock>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" >
            <GroupBox HorizontalAlignment="Left" Header="CheckBox" Margin="10,0,0,0" >
                <StackPanel Orientation="Vertical"  Margin="10" >
                    <CheckBox IsChecked="{Binding TestCheckBox.IsChecked,Mode=TwoWay}" Content="{Binding TestCheckBox.Content,Mode=TwoWay}" Margin="5"  FontSize="12"></CheckBox>
                    
                </StackPanel>
            </GroupBox>

            
        </StackPanel>
        <StackPanel>
            <TextBlock  TextBlock.LineHeight="24" Height="24" Text="Footer" Margin="10"  FontSize="12"></TextBlock>
        </StackPanel>
    </DockPanel>
</Page>
