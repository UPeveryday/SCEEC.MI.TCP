<UserControl x:Class="ZdfFlatUI.Test.UITest.Base.BehaviorTest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Behavior="clr-namespace:ZdfFlatUI.Behaviors;assembly=WPF.UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ZdfFlatUI.Test.UITest.Base"
			 xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="450"
             d:DesignWidth="800" mc:Ignorable="d">
	<Grid>
		<TextBlock x:Name="tb" Text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试" 
				   Width="100" Height="40" TextTrimming="CharacterEllipsis" TextWrapping="Wrap"
				   VerticalAlignment="Center">
			<i:Interaction.Behaviors>
				<Behavior:TextCompleteDisplayBehavior Text="{Binding Text, ElementName=tb}"
													  ShowWidth="200"/>
			</i:Interaction.Behaviors>
		</TextBlock>
	</Grid>
</UserControl>
