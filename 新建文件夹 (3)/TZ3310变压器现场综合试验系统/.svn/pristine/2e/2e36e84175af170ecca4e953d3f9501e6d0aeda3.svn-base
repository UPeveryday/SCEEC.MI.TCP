<Window x:Class="SCEEC.TTM.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCEEC.TTM"
        mc:Ignorable="d"
        Title="变压器现场综合试验系统" 
        Height="225" 
        Width="400" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        Background="#FF1E1E1E" Initialized="Window_Initialized" 
        Cursor="AppStarting" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="30,35,30,0">
            <TextBlock Text="上海思创电器设备有限公司" Foreground="Gray" FontSize="24" Block.TextAlignment="Center"/>
            <TextBlock Text="变压器现场综合试验系统" Foreground="LightGray" FontSize="28" Block.TextAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
            <ProgressBar x:Name="LaunchProgressBar" Height="12" Background="#FF3E3E42" BorderBrush="#FF3E3E42" Foreground="#FF686868"/>
            <TextBlock x:Name="StatusTextBlock" Text="正在加载..." Foreground="LightGray" Margin="20,10,0,0"/>
            <TextBlock x:Name="DetailTextBlock" Text="SCEEC.TTM.exe" Foreground="LightGray" Margin="20,5,0,15"/>
        </StackPanel>
    </Grid>
</Window>


